web1:
  name: cakephp
  document_root: app/webroot
  shared_writable_dirs:
    - app/tmp
    - app/tmp/cache
    - app/tmp/cache/models
    - app/tmp/cache/persistent
    - app/tmp/cache/views
    - app/tmp/logs
    - app/tmp/sessions
    - app/tmp/tests
  php_extensions:
    - mcrypt
    - mbstring
    - mysqli
    - pdo_mysql
    - apc
  after_build:
    - "mv pagoda/database.php app/Config/database.php"
    - "mv pagoda/core.php app/Config/core.php"
  before_deploy:
    - "app/Console/cake Migrations.migration run all -p Migrations"
    - "app/Console/cake Migrations.migration run all --plugin Users"
    - "app/Console/cake Migrations.migration generate -f"
  after_deploy:
    - "rm -rf app/tmp/cache/models/*"
    - "rm -rf app/tmp/cache/persistent/*"
    - "rm -rf app/tmp/cache/views/*"
db1:
  name: cakephp
  type: mysql